<Window x:Class="ChepInlineApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChepInlineApp"
        xmlns:uc ="clr-namespace:ChepInlineApp.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1025" Width="1024"
        Background="Black"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:HeaderRow Grid.Row="0" />
        <ContentControl Grid.Row="1"
            Content="{Binding CurrentViewModel}"/>
        
        <!-- Modal Overlay -->
        <Grid Grid.RowSpan="2"
              Background="#80000000"
              Visibility="{Binding IsModalOpen, Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="999"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <ContentControl Content="{Binding ModalViewModel}" />
        </Grid>
    </Grid>
</Window>
