<UserControl x:Class="ChepInlineApp.UserControls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChepInlineApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Navigation Sidebar -->
    <Grid Background="{DynamicResource PrimaryBackground}" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Main Border -->
        <Border BorderBrush="{StaticResource PrimaryBorder}" BorderThickness="1.5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource NavigationButton}"
                Grid.Column="0"
                Name="CollapseExpandButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Width="60"
                Height="Auto"
                Margin="5"
                Click="CollapseExpandButton_Click">
                    <Grid>
                        <Image x:Name="ExpandImage"
                       Source="pack://application:,,,/Resources/ExpandArrow.png"
                       Visibility="{Binding ExpandImageVisbility}"/>
                        <Image x:Name="CollapseImage"
                       Source="pack://application:,,,/Resources/CollapseArrow.png"
                       Visibility="{Binding CollapseImageVisibility}"/>
                    </Grid>
                </Button>

                <!-- Navigation Buttons -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0 40 0 40"
                      Grid.Column="1"
                      Visibility="{Binding IsCollapsed, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                      PanningMode="VerticalOnly"
                      PanningDeceleration="0.001"
                      PanningRatio="0.8"
                      IsManipulationEnabled="True">

                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}"/>
                    </ScrollViewer.Resources>

                    <StackPanel VerticalAlignment="Top" Orientation="Vertical">

                        <Button Margin="0,80, 20, 0"
                        Command="{Binding HomeButtonCommand}"
                        Style="{StaticResource NavigationPrimaryButton}"
                        Content="Home" />

                        <Button Margin="0,80, 20, 0"
                        Command="{Binding RecipeManagerButtonCommand}"
                        Style="{StaticResource NavigationPrimaryButton}"
                        Content="Recipe&#x0A;Manager" />

                        <Button Margin="0,80, 20, 0"
                        Command="{Binding ExitApplicationButtonCommand}"
                        Style="{StaticResource NavigationPrimaryButton}"
                        Content="Exit" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
