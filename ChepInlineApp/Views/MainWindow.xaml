<Window x:Class="ChepInlineApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChepInlineApp"
        xmlns:uc ="clr-namespace:ChepInlineApp.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1025" Width="1024"
        Background="Black"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:HeaderRow Grid.Row="0" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Dynamic View Content -->
            <ContentControl Grid.Column="0"
                Content="{Binding CurrentViewModel}"/>
            <Border Grid.Column="1"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <uc:NavigationBar Grid.Row="0"
                                  DataContext="{Binding NavigationBarViewModel}"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>

                </Grid>
            </Border>
            <!-- Modal Overlay -->
            <Grid Grid.ColumnSpan="2"
              Background="#80000000"
              Visibility="{Binding IsModalOpen, 
              Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="999"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

                <!-- Active Modal Content -->
                <ContentControl Content="{Binding ModalViewModel}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
