<UserControl x:Class="ChepInlineApp.UserControls.HeaderRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChepInlineApp.UserControls"
             xmlns:sc ="clr-namespace:ChepInlineApp.UserControls.SubControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Header Row: Displays AMV Logo, Title, and Customer Logo -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <!-- AMV Logo -->
            <ColumnDefinition Width="*"/>
            <!-- Title -->
            <ColumnDefinition Width="auto"/>
            <!-- Customer Logo -->
        </Grid.ColumnDefinitions>

        <sc:AMVLogo Grid.Column="0"/>
        <sc:Title Grid.Column="1"/>
        <sc:CustomerLogo Grid.Column="2"/>
    </Grid>
</UserControl>
