<UserControl x:Class="ChepInlineApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChepInlineApp.Views"
             xmlns:enums="clr-namespace:ChepInlineApp.Enums"
             xmlns:resources="clr-namespace:ChepInlineApp.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    

        <!-- Inspection Status Checkboxes -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <!-- Total Pallets Inspected -->
            <Border Background="#1a1a1a"
        BorderBrush="#00BCD4"
        BorderThickness="3"
        CornerRadius="10"
        Padding="25,18"
        Margin="0,0,25,0"
        MinWidth="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Viewbox Grid.Column="0"
                 Width="36"
                 Height="36"
                 Margin="0,0,16,0"
                 VerticalAlignment="Center">
                        <!-- Simple "box/counter" icon -->
                        <Path Data="M3,6 L21,6 L21,20 L3,20 Z M3,10 L21,10"
                  Stroke="#00BCD4"
                  StrokeThickness="2"
                  Fill="Transparent"/>
                    </Viewbox>

                    <!-- Total Label -->
                    <TextBlock Grid.Column="1"
                   Text="Total"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>

                    <!-- Total Count -->
                    <TextBlock Grid.Column="2"
                   Text="{Binding TotalPalletsInspected}"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#00BCD4"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0"/>
                </Grid>
            </Border>

            <!-- Pass Checkbox -->
            <Border Background="#1a1a1a"
                    BorderBrush="#4CAF50"
                    BorderThickness="3"
                    CornerRadius="10"
                    Padding="25,18"
                    Margin="0,0,25,0"
                    MinWidth="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Checkbox Border -->
                    <Border Grid.Column="0"
                            Width="50"
                            Height="50"
                            BorderBrush="#4CAF50"
                            BorderThickness="4"
                            CornerRadius="6"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding InfeedCam.InspectionPassed}" Value="True">
                                        <Setter Property="Background" Value="#4CAF50"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- Tick Mark - Centered and Larger -->
                        <Viewbox Visibility="{Binding InfeedCam.InspectionPassed, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Width="30"
                                 Height="30"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <Path Data="M 5,12 L 12,19 L 25,6"
                                  Stroke="White"
                                  StrokeThickness="3"
                                  Stretch="Uniform"/>
                        </Viewbox>
                    </Border>
                    
                    <!-- Pass Label -->
                    <TextBlock Grid.Column="1"
                               Text="Pass"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    
                    <!-- Pass Count -->
                    <TextBlock Grid.Column="2"
                               Text="{Binding PassCount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#4CAF50"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                </Grid>
            </Border>
            
            <!-- Fail Checkbox -->
            <Border Background="#1a1a1a"
                    BorderBrush="#F44336"
                    BorderThickness="3"
                    CornerRadius="10"
                    Padding="25,18"
                    MinWidth="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Checkbox Border -->
                    <Border Grid.Column="0"
                            Width="50"
                            Height="50"
                            BorderBrush="#F44336"
                            BorderThickness="4"
                            CornerRadius="6"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding InfeedCam.InspectionPassed}" Value="False">
                                        <Setter Property="Background" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- Cross Mark  -->
                        <Viewbox Grid.Column="0"
                                 Width="30"
                                 Height="30"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding InfeedCam.InspectionPassed, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Grid Width="24" Height="24"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path Data="M 2,2 L 22,22"
                                      Stroke="White"
                                      StrokeThickness="3"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                                <Path Data="M 22,2 L 2,22"
                                      Stroke="White"
                                      StrokeThickness="3"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Grid>
                        </Viewbox>
                    </Border>
                    
                    <!-- Fail Label -->
                    <TextBlock Grid.Column="1"
                               Text="Fail"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    
                    <!-- Fail Count -->
                    <TextBlock Grid.Column="2"
                               Text="{Binding FailCount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F44336"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Main Camera View -->
        <Border Grid.Row="1"
                Background="#1a1a1a"
                BorderBrush="{StaticResource PrimaryBorder}"
                BorderThickness="3"
                CornerRadius="12">
            <local:ImageView Title="{Binding InfeedCam.Title}"
                             Status="{Binding InfeedCam.Status}"
                             Image="{Binding InfeedCam.Image}"/>
        </Border>

        <!-- Reset Button - Bottom Right -->
        <Button Grid.Row="1"
                Command="{Binding ResetCountersCommand}"
                Content="Reset"
                Style="{StaticResource NavigationPrimaryButton}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Padding="15,10"/>
    </Grid>
</UserControl>
