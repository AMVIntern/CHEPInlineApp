<Application x:Class="ChepInlineApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChepInlineApp"
             xmlns:views="clr-namespace:ChepInlineApp.Views"
             xmlns:vm="clr-namespace:ChepInlineApp.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ImageViewModel}">
                <views:ImageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:RecipeManagerView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MessageModalViewModel}">
                <views:MessageModalView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ConfirmModalViewModel}">
                <views:ConfirmModalView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TextInputModalViewModel}">
                <views:TextInputModalView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
