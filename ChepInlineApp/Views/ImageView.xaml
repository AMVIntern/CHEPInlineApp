<UserControl x:Class="ChepInlineApp.Views.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:HalconDotNet="http://schemas.mvtec.com/halcondotnet"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChepInlineApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Margin="10"
                Background="{DynamicResource PrimaryBackground}"
                BorderBrush="{StaticResource PrimaryBorder}"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Rectangle Width="24" Height="24"
                           Fill="{Binding Status, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StatusToColorConverter}}"
                           Stroke="Black" StrokeThickness="1" />
                <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           VerticalAlignment="Center"
                           Style="{StaticResource TextVerySmall}"/>
            </StackPanel>
        </Border>

        <!-- CAMERA IMAGE -->
        <Border Grid.Row="1"
                Margin="5"
                Background="#222"
                CornerRadius="8">
            <HalconDotNet:HSmartWindowControlWPF
                MinHeight="400"
                MinWidth="250"
                Background="#222">
                <HalconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Image, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </HalconDotNet:HSmartWindowControlWPF>
        </Border>
    </Grid>
</UserControl>
