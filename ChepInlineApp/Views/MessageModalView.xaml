<UserControl x:Class="ChepInlineApp.Views.MessageModalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChepInlineApp.Views"
             xmlns:uc="clr-namespace:ChepInlineApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Modal Border Container -->
        <Border Padding="20" CornerRadius="8"
        BorderBrush="{StaticResource PrimaryBorder}"
        BorderThickness="1"
        Background="{DynamicResource PrimaryBackground}"
        HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Modal Content Stack -->
            <StackPanel Width="500">
                <!-- Modal Title -->
                <uc:ModalTitleBlock/>

                <!-- OK Button Only -->
                <uc:ModalOkPanel/>
            </StackPanel>

            <!-- Drop Shadow Effect -->
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4"
                          BlurRadius="10"
                          Opacity="0.4" />
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
